<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/red_1">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/img_title_left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.bovink.gradient.GradientTextView
            android:id="@+id/tv_left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:corners_radius="20dp" />

        <com.bovink.gradient.GradientTextView
            android:id="@+id/tv_center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/blue_1"
            android:textSize="16sp"
            app:corners_radius="20dp"
            app:solid_color="@color/white" />

        <com.bovink.gradient.GradientTextView
            android:id="@+id/tv_right"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:corners_radius="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_side_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_side_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />
</RelativeLayout>